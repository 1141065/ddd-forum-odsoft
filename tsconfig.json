{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "lib": ["es6"],
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src"
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.spec.ts",
    "src/**/*.spec.js"
  ],
  "exclude": [
    "node_modules"
  ]
}